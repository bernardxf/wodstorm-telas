#content(data-ng-init="carregaCadFinMovimento();")
	#content-header
		h1 Movimento

	#content-container
		.portlet
			.portlet-header
				h3
					i.fa.fa-tasks
					| Movimento

			.portlet-content
				form.form(name="form", novalidate)
					.row
						.col-sm-12
							.form-group
								label(for="moviData") Data *
								input#moviData.form-control(type="text", ws-data, data-ng-model="cadFinanceiroDataset.data", required)
							
							.form-group	
								label(for="moviTipo") Tipo *
								.form-group
									label.radio-inline
										input#moviTipo(name="moviTipo", type="radio", value="R", data-ng-model="cadFinanceiroDataset.tipo") Receita
									
									label.radio-inline
										input#moviTipo(name="moviTipo", type="radio", value="D", data-ng-model="cadFinanceiroDataset.tipo") Despesa

							.form-group
								label(for="moviCategoria") Categoria *
								.input-group
									select#moviCateogria.form-control(data-ng-model="cadFinanceiroDataset.id_agrupador", required)
										option(data-ng-repeat="categoria in listaCategorias", value="{{categoria.id_agrupador}}") {{categoria.nome}}

									span.input-group-btn
										button.btn.btn-warning(type="button", data-ng-click="modalNovoAgrupador();")
											i.glyphicon.glyphicon-plus-sign(alt="Novo Agrupador", title="Novo Agrupador")

							.form-group
								label(for="moviDescricao") Descrição
								input#moviDescricao.form-control(type="text", data-ng-model="cadFinanceiroDataset.descricao")

							.form-group
								label(for="planoValor") Valor *
								.input-group
									span.input-group-addon R$	
									input#planoValor.form-control(type="text", data-ng-model="cadFinanceiroDataset.valor", required)

							button.btn.btn-success(type="button", data-ng-click="salvaFinMovimento();", data-ng-disabled="form.$invalid") Salvar
							button.btn.btn-danger(type="button", data-ng-click="cancelaEdicaoMovimento();") Cancelar
