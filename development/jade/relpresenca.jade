#content
	#content-header
		h1 Relatório de Presença
	#content-container
		.row
			.col-sm-12
				.portlet
					.portlet-header
						h3
							i.fa.fa-tasks
							|Pesquisa
					.portlet-content
						.col-sm-5
							.form-group
								label(for="datainicial") Data Inicial
								input#datainicial.form-control(ws-data, type="text", data-ng-model="relPresencaDataset.data_ini")
						.col-sm-5
							.form-group
								label(for="datafinal") Data Final
								input#datafinal.form-control(ws-data, type="text", data-ng-model="relPresencaDataset.data_fim")
						.col-sm-2
							span &nbsp
							.form-group
								button.btn.btn-success(type="button", data-ng-click="pesquisaRelPresenca();") Pesquisar
		.row
			.col-sm-12
				.portlet
					.portlet-header
						h3
							i.fa.fa-tasks
							| Resultado
					.portlet-content
						.table-responsive
							table.table.table-striped.table-bordered.table-hover.table-highlight.table-checkable
								thead
									tr
										th Presentes
										th Ausentes
								tbody
									tr
										td
											{{relPresencaResponseDataset.presentes.length}}
											a.info-modal(data-ng-click='buscaAlunosPorPresenca("P")')
												i.fa.fa-info-circle
										td
											{{relPresencaResponseDataset.ausentes.length}}
											a.info-modal(data-ng-click='buscaAlunosPorPresenca("A")')
						.table-responsive
							table.table.table-striped.table-bordered.table-hover.table-highlight.table-checkable
								thead
									tr
										th Nome
										th Ação
								tbody
									tr(ng-repeat="item in alunosPresencaSelecionada | orderBy:'nome'| startFrom: (currentPage - 1) * itemsPerPage | limitTo: itemsPerPage")
										td {{item.nome}}
										td
											a.btn.btn-sm.btn-success(href="#/cad_aluno/{{item.id_aluno}}")
												i.fa.fa-edit

							pagination.pagination-sm(total-items="alunosPresencaSelecionada.length", page="currentPage", items-per-page="itemsPerPage", boundary-links="true", rotate="false", previous-text="&lsaquo;", next-text="&rsaquo;", first-text="&laquo;", last-text="&raquo;", max-size="maxSize")
